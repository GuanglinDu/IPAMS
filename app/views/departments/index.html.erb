<h1>Listing Departments</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>No.</th>
      <th>Dept name</th>
      <th>Location</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% counter = 1 %>
    <% @departments.each do |department| %>
      <tr>
        <td><%= counter %></td>
        <td><%= department.dept_name %></td>
        <td><%= department.location %></td>
        <td><%= link_to 'Show', department, class: 'btn btn-primary btn-xs' %></td>
        <td>
          <%= link_to edit_department_path(department), class: 'btn btn-info btn-xs' do %>
            <i class="glyphicon glyphicon-edit"></i> Edit
          <% end %>
        </td>
        <td>
          <%= link_to department, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
            <i class="glyphicon glyphicon-remove"></i> Destroy
          <% end %>
        </td>
      </tr>
      <% counter += 1 %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_department_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Department
<% end %>
