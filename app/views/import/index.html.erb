<!-- VLANs import based on https://github.com/bootstrap-ruby/rails-bootstrap-forms -->
<div class="row">
  <!-- The import column -->
  <div class="col-xs-6">
    <h3>To Import</h3>
    <div>
      <h5><b>Step 1</b>: Download templates to get your data ready (<font color="red">Note: The file must be saved in UTF-8 encoding!</font>).</h5>
      <%= link_to "VLAN importing template", import_vlan_importing_template_path, class: 'btn btn-success' %>
      <%= link_to "IP address importing template", import_ip_address_importing_template_path, class: 'btn btn-success' %>
    </div>

    <!-- Bootstrap and ‘form_tag’ vs. ‘form_for’: http://seanmcevoy.com/bootstrap-form_tag-vs-form_for/ -->
    <div>
      <h5><b>Step 2</b>: Select What to import, locate the CSV file & import.</h5>
      <%= bootstrap_form_tag url: import_import_path, multipart: true, class: 'form-horizontal' do |f| %>
        <!-- Handle form_tag errors as in the case form_for?
          http://stackoverflow.com/questions/4129229/rails-restoring-contents-of-non-model-form-that-uses-form-tag
        -->
        <div class="form-group">
          <div class="col-xs-4">
            <%= f.select :option_id, options_for_select(["VLANs", "IP Addresses"]) %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-8">
            <%= f.file_field :file %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-offset-8 col-xs-4">
            <%= f.submit "Import", class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- The export column -->
  <div class="col-xs-6">
    <h3>Info</h3>
      <p>TODOs</p>
  </div>
</div>

