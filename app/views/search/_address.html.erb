<table class="table table-striped table-condensed">
<thead>
  <tr>
    <th>IP Address</th>
    <th>MAC Address</th>
    <th>Usage</th>
    <th>User Name</th>
    <th>Dept Name</th>
    <th>Title</th>
    <th>Office Phone</th>
    <th>Cell Phone</th>
    <th>Building</th>
    <th>Storey</th>
    <th>Room</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Assigner</th>
  </tr>
</thead>
<tbody id="main-table-body">
<% address.each do |addr| %>
  <%# Calls the helper methods in ApplicationHelper %>
  <% user = UsersHelper.find_user(addr.user_id) %>
  <% department = DepartmentsHelper.find_department(user.department_id) %>
  <tr>
    <td>
      <% clr = "green" %>
      <% clr = "red" if user.name == "NOBODY" %>
      <font color="<%= clr %>"><%= addr.ip %></font>
    </td>
    <td><%= addr.mac_address %></td>
    <td><%= addr.usage %></td>
    <td><%= user.name %></td>
    <td><%= department.dept_name %></td>
    <td><%= user.title %></td>
    <td><%= user.office_phone %></td>
    <td><%= user.cell_phone %></td>
    <td><%= user.building %></td>
    <td><%= user.storey %></td>
    <td><%= user.room %></td>
    <td><%= addr.start_date%></td>
    <td><%= addr.end_date%></td>
    <td><%= addr.assigner%></td>
  </tr>
<% end %>
</tbody>
</table>
