<% users = uneditable %>
<%# http://goo.gl/0v3WNw %>
<% count = users.offset %>

<% users.each do |user| %>
  <% count += 1 %>
  <%# Show less info of NOBODY %>
  <% if user.name == "NOBODY" %>
    <%= render partial: "users/nobody",
               object:  user,
               locals:  { count: count } %>
  <% else %>
    <%# addresses_helper: helpers for controllers and views %>
    <% addresses = user.addresses %>

    <% if addresses.count >= 2 %>
      <%= render partial: "users/row_with_multiple_ip", object: user,
                 locals: {count: count, user_ip_count: addresses.count,
                          editable: false} %>
      <% addresses.each do |addr| %>
        <%= render partial: "users/subrow", object: addr,
                   locals: {user: user, editable: false} %>
      <% end %>
    <% else %>
        <%= render partial: "users/row_with_one_ip", object: user,
          locals: {count: count, addresses: addresses, editable: false} %>
    <% end %>
  <% end %>
<% end %>
