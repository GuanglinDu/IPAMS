<h1>Listing users</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Office phone</th>
      <th>Cell phone</th>
      <th>Email</th>
      <th>Building</th>
      <th>Storey</th>
      <th>Room</th>
      <th>Department</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.office_phone %></td>
        <td><%= user.cell_phone %></td>
        <td><%= user.email %></td>
        <td><%= user.building %></td>
        <td><%= user.storey %></td>
        <td><%= user.room %></td>
        <td><%= user.department_id %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-primary btn-xs' %></td>
        <td>
          <%= link_to edit_user_path(user), class: 'btn btn-info btn-xs' do %>
            <i class="glyphicon glyphicon-edit"></i> Edit
          <% end %>
        </td>
        <td>
          <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
            <i class="glyphicon glyphicon-remove"></i> Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
  <%= link_to new_user_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New User
  <% end %>
</p>
