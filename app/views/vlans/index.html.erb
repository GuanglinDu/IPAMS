<h3>Listing VLANs</h3>
<div>
  <!-- VLAN list -->
  <table class="table table-striped table-condensed">
    <thead>
    <tr>
      <th>No.</th>
      <th>lan_id</th>
      <th>LAN Name</th>
      <th>VLAN Number</th>
      <th>VLAN Name</th>
      <th>Static IP Start</th>
      <th>Static IP End</th>
      <th>Subnet Mask</th>
      <th>Gateway</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <!-- render partial: "vlans/vlan", collection: @lan.vlans -->
    <tbody>
      <!-- %= render vlans % -->
      <%= render :partial => 'vlan', collection: @vlans %> 
    </tbody>
  </table>
  <!-- Create a new VLAN -->
  <p><%= link_to new_vlan_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New VLAN
    <% end %>
  </p>
</div>

<!-- VLANs import/export -->
<div>
  <h4>Import VLANs from a CSV file (template available)</h4>
  <%= form_tag({action: :import}, multipart: true) do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import", class: 'btn btn-danger' %>
  <% end %>
</div>

