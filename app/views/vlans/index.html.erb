<h3>Listing VLANs</h3>
<div>
  <!-- VLAN list -->
  <table class="table table-striped table-condensed">
    <thead>
    <tr>
      <th>No.</th>
      <th>lan_id</th>
      <th>LAN Name</th>
      <th>VLAN Number</th>
      <th>VLAN Name</th>
      <th>Static IP Start</th>
      <th>Static IP End</th>
      <th>Subnet Mask</th>
      <th>Gateway</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <!-- render partial: "vlans/vlan", collection: @lan.vlans -->
    <tbody>
      <!-- %= render vlans % -->
      <%= render :partial => 'vlan', collection: @vlans %> 
    </tbody>
  </table>
  <!-- Create a new VLAN -->
  <p><%= link_to new_vlan_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New VLAN
    <% end %>
  </p>
</div>

<div>
  <h3>Import VLANs from a CSV File as the following template shows</h3>
  <table class="table table-condensed">
  <thead>
    <th>lan_id</th>
    <th>vlan_number</th>
    <th>vlan_name</th>
    <th>static_ip_start</th>
    <th>static_ip_end</th>
    <th>subnet_mask</th>
    <th>gateway</th>
    <th>vlan_description</th>
  </thead>
  <tbody>
    <tr>
      <td>12</td>
      <td>22</td>
      <td>VLAN-Main-Building</td>
      <td>192.168.1.0</td>
      <td>192.168.1.255</td>
      <td>255.255.255.0</td>
      <td>192.168.1.254</td>
      <td>Main Building</td>
    </tr>
  </tbody>
  </table>

  <!-- VLANs import/export -->
  <%= form_tag({action: :import}, multipart: true) do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV with headers" %>
    <!-- %= f.button :submit, name: "lan_id", value: @lan.id % -->
  <% end %>
</div>

