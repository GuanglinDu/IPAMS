<% provide(:title, "Show IP Histories") %>

<% count = @histories.offset %>
<h3>Show the history of this IP address</h3>
<h3>IP Address: <b style="color:red"><%= @address.ip %></b></h3>
<div>
  <%= page_entries_info @histories %><br />
  <%= will_paginate @histories, renderer: BootstrapPagination::Rails %>
  
  <table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th>No.</th>
    <th>IP Address</th>
    <th>MAC Address</th>
    <th>Usage</th>
    <th>User Name</th>
    <th>Dept Name</th>
    <th>Office Phone</th>
    <th>Cell Phone</th>
    <th>Building</th>
    <th>Room</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Recycle Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody id="main-table-body">
  <% if @histories != nil %>
    <% @histories.each do |history| %>
    <% count += 1 %>
    <tr>
      <td><%= count %></td>
      <td><%= @address.ip %></td>
      <td><%= history.mac_address %></td>
      <td><%= history.usage %></td>
      <td><%= history.user_name %></td>
      <td><%= history.dept_name %></td>
      <td><%= history.office_phone %></td>
      <td><%= history.cell_phone %></td>
      <td><%= history.building %></td>
      <td><%= history.room %></td>
      <td><%= history.start_date %></td>
      <td><%= history.end_date %></td>
      <td><%= history.created_at.localtime %></td>
    </tr>
  <% end %>
  <% else %>
    <tr><td colspan="12">No history record!</td></tr>
  <% end %> 
  </tbody>
  </table>

  <%= page_entries_info @histories %><br />
  <%= will_paginate @histories, renderer: BootstrapPagination::Rails %>
</div>
<br />
<div>
  <%= link_to welcome_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-home"></i> Home
  <% end %>
  | <%= link_to addresses_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-arrow-right"></i> Go to Addresses
  <% end %>
</div>
